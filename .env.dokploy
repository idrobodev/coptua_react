# Environment variables for Dokploy deployment
NODE_ENV=production

# API URLs for Dokploy production deployment
# Since Dokploy handles routing at reverse proxy level, use full domain URLs
REACT_APP_AUTH_API_BASE_URL=https://todoporunalma.org/api/auth
REACT_APP_DASHBOARD_API_BASE_URL=https://todoporunalma.org/api/dashboard
REACT_APP_API_BASE_URL=https://todoporunalma.org/api/dashboard
REACT_APP_FORMATOS_API_URL=https://todoporunalma.org/api/files

# CORS Origins for backend configuration
REACT_APP_CORS_ORIGINS=https://todoporunalma.org,https://www.todoporunalma.org